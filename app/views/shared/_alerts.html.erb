<% if flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Error Notification!", sticky: "false", image: "notice") %>
<% elsif flash[:notice] %>
	<%= js add_gritter(flash[:notice], title: "Notification!", sticky: "false", image: "notice") %>
<% else %>
	<%= js add_gritter(flash[:alert], title: "Alert Notification!", sticky: "false", image: "notice") %>
<% end %>